TITLE AREA Y PERIMETRO

include "emu8086.inc"

DATOS SEGMENT

BASE DB ?
ALTURA DB ?
RADIO DB ?
LADO DB ?
AREA DB ?
PERIMETRO DB ?
X DB ?
Y DB ?

DATOS ENDS

PILA SEGMENT

DB 64 DUP(?)

PILA ENDS

CODIGO SEGMENT

INICIO PROC FAR

ASSUME DS:DATOS, CS:CODIGO, SS:PILA

PUSH DS
MOV AX, 0
PUSH AX

MOV AX, DATOS
MOV DS, AX
MOV ES, AX

MENU:
CALL CLEAR_SCREEN
MOV X, 2
MOV Y, 2
GOTOXY X, Y
CALL PTHIS
DB "INSERTE LA OPCION DESEADA:", 0
ADD Y, 2
GOTOXY X, Y
CALL PTHIS
DB "1-TRIANGULO", 0
INC Y
GOTOXY X, Y
CALL PTHIS
DB "2-CUADRADO", 0
INC Y
GOTOXY X, Y
CALL PTHIS
DB "3-CIRCULO", 0
INC Y
GOTOXY X, Y
CALL PTHIS
DB "0-SALIR", 0

MOV AX, 0
ADD Y, 2
GOTOXY X, Y

CALL SCAN_NUM
MOV AL, CL
CMP AL, 1
JE TRIANGULO
CMP AL, 2
JE CUADRADO
CMP AL, 3
JE CIRCULO
CMP AL, 0
JE SALIR

TRIANGULO:
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA LA BASE:", 0
INC Y
GOTOXY X, Y
CALL SCAN_NUM
MOV BASE, CL
INC Y
GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA LA ALTURA:", 0
INC Y
GOTOXY X, Y
CALL SCAN_NUM
MOV ALTURA, CL
INC Y
GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA EL TERCER LADO:", 0
INC Y
GOTOXY X, Y
CALL SCAN_NUM
MOV LADO, CL
ADD Y, 2
GOTOXY X, Y
CALL PTHIS
DB "EL AREA ES:", 0
MOV AL, BASE
MUL ALTURA
MOV BL, 2
MOV AREA, AL
MOV AL, AREA
DIV BL
MOV X, 14
GOTOXY X, Y
CALL PRINT_NUM_UNS
MOV X, 2
INC Y
GOTOXY X, Y
CALL PTHIS
DB "EL PERIMETRO ES:", 0
MOV AL, BASE
ADD AL, ALTURA
ADD AL, LADO
MOV PERIMETRO, AL
MOV AX, 0
MOV AL, PERIMETRO
CALL PRINT_NUM_UNS
MOV X, 22
GOTOXY X, Y
CALL SCAN_NUM
JMP MENU

CUADRADO:
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA EL LADO:", 0
INC Y
GOTOXY X, Y
CALL SCAN_NUM
MOV LADO, CL
ADD Y, 2
GOTOXY X, Y
CALL PTHIS
DB "EL AREA ES:", 0
MOV AL, LADO
MUL LADO
MOV AREA, AL
MOV AX, 0
MOV AL, AREA
MOV X, 14
GOTOXY X, Y
CALL PRINT_NUM_UNS
MOV X, 2
INC Y
GOTOXY X, Y
CALL PTHIS
DB "EL PERIMETRO ES:", 0
MOV BL, 4
MOV AL, LADO
MUL BL
MOV PERIMETRO, AL
MOV AX, 0
MOV AL, PERIMETRO
CALL PRINT_NUM_UNS
MOV X, 23
GOTOXY X, Y
CALL SCAN_NUM
JMP MENU

CIRCULO:
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA EL RADIO:", 0
INC Y
GOTOXY X, Y
CALL SCAN_NUM
MOV RADIO, CL
ADD Y, 2
GOTOXY X, Y
CALL PTHIS
DB "EL AREA ES APROXIMADAMENTE:", 0
MOV BL, 3
MOV AL, RADIO
MUL RADIO
MUL BL
MOV AREA, AL
MOV AX, 0
MOV AL, AREA
MOV X, 30
GOTOXY X, Y
CALL PRINT_NUM_UNS
MOV X, 2
INC Y
GOTOXY X, Y
CALL PTHIS
DB "EL PERIMETRO ES APROXIMADAMENTE:", 0
MOV BL, 6
MOV AL, RADIO
MUL BL
MOV PERIMETRO, AL
MOV AX, 0
MOV AL, PERIMETRO
CALL PRINT_NUM_UNS
MOV X, 38
GOTOXY X, Y
CALL SCAN_NUM
JMP MENU

SALIR:

RET

INICIO ENDP

CODIGO ENDS

DEFINE_PTHIS
DEFINE_SCAN_NUM
DEFINE_PRINT_NUM_UNS
DEFINE_CLEAR_SCREEN

END INICIO



; [SOURCE]: C:\emu8086\MySource\AREA.asm
